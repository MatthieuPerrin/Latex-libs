\newcommand\sm@cell@width{6mm}
\newcommand\sm@cell@height{6mm}
\newcommand\sm@head@size{2mm}
\newcommand\sm@draw@nextCell{}
\newcommand\sm@array@name{}



\colorlet{sm@head@color}{black}
\colorlet{sm@fill@alert}{black!30}
